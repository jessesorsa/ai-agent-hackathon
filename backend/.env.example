# OpenAI API Key (REQUIRED)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# OPTIONAL - Have sensible defaults
# ============================================

# OpenAI Model Configuration
# Options: gpt-4o-mini (default, cost-effective), gpt-4o, gpt-4-turbo
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30

# Composio API (for centralized tool management)
# Get your key from: https://app.composio.dev/settings/api-keys
# USER_IDs for users with pre-configured tools
COMPOSIO_API_KEY=your_composio_api_key_here

HUBSPOT_USER_ID=your_hubspot_user_id_here

SLACK_USER_ID=your_slack_user_id_here

GCALENDAR_USER_ID=your_gcalendar_user_id_here

GMAIL_USER_ID=your_gmail_user_id_here

# ============================================
# DEVELOPMENT / DEMO MODE
# ============================================

# Use mock data instead of real APIs (for offline demos)
# Set to "true" to use fallback/mock data
USE_MOCK_DATA=false

# Composio mode: "real" or "mock"
COMPOSIO_MODE=real
